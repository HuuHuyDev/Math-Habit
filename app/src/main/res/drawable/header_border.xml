<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền (nếu muốn) -->
    <solid android:color="@android:color/transparent"/>

    <!-- Border -->
    <stroke
        android:width="2dp"
        android:color="#22FFFFFF"/> <!-- Màu viền trắng mờ -->

    <!-- Bo góc -->
    <corners android:radius="20dp"/>

    <!-- Padding bên trong (optional) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
