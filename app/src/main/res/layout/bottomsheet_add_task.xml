            </com.google.android.material.chip.ChipGroup>

            <!-- Layout cho BÃ i táº­p (Exercise) -->
            <LinearLayout
                android:id="@+id/layoutExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- MÃ´n há»c -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="MÃ´n há»c"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_8"
                    app:selectionRequired="true"
                    app:singleSelection="true">
                    <!-- Chips will be added dynamically from API -->
                </com.google.android.material.chip.ChipGroup>

                <!-- Äá»™ khÃ³ -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_12"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Äá»™ khÃ³"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderDifficulty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stepSize="1"
                    android:value="1"
                    android:valueFrom="1"
                    android:valueTo="5"
                    app:labelBehavior="withinBounds" />

            </LinearLayout>

            <!-- Layout cho ThÃ³i quen (Habit) -->
            <LinearLayout
                android:id="@+id/layoutHabit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Category thÃ³i quen -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Loáº¡i thÃ³i quen"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupHabitCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_8"
                    app:selectionRequired="true"
                    app:singleSelection="true">
                    <!-- Chips will be added dynamically from API -->
                </com.google.android.material.chip.ChipGroup>

                <!-- Láº·p láº¡i -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_12"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Láº·p láº¡i hÃ ng ngÃ y"
                        android:textColor="@color/text_primary"
