                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchRecurring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                </LinearLayout>

            </LinearLayout>

            <!-- Äiá»ƒm thÆ°á»Ÿng -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPoints"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:hint="Äiá»ƒm thÆ°á»Ÿng (Ä‘á»ƒ trá»‘ng = máº·c Ä‘á»‹nh)"
                app:boxCornerRadiusBottomEnd="@dimen/radius_medium"
                app:boxCornerRadiusBottomStart="@dimen/radius_medium"
                app:boxCornerRadiusTopEnd="@dimen/radius_medium"
                app:boxCornerRadiusTopStart="@dimen/radius_medium"
                app:prefixText="â­ ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:inputType="number"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Thá»i gian -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilTime"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_12"
                android:hint="Giá» hoÃ n thÃ nh (VD: 18:00)"
                app:boxCornerRadiusBottomEnd="@dimen/radius_medium"
                app:boxCornerRadiusBottomStart="@dimen/radius_medium"
                app:boxCornerRadiusTopEnd="@dimen/radius_medium"
                app:boxCornerRadiusTopStart="@dimen/radius_medium"
                app:prefixText="ðŸ• ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:inputType="time"
                    android:maxLines="1" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_20"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginEnd="@dimen/spacing_8"
            android:layout_weight="1"
            android:fontFamily="@font/inter_semibold"
            android:text="Há»§y"
            android:textColor="@color/text_secondary"
            app:cornerRadius="@dimen/radius_medium" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_marginStart="@dimen/spacing_8"
            android:layout_weight="1"
            android:backgroundTint="#2D5FFF"
            android:fontFamily="@font/inter_bold"
            android:text="Giao bÃ i"
            android:textColor="@color/white"
            app:cornerRadius="@dimen/radius_medium" />

    </LinearLayout>

</LinearLayout>
