<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_primary">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_16">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_white"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Quay lại"
            app:tint="@color/primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_16"
            android:text="Mời bạn thách đấu"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_16">

            <!-- Search Box -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_16"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusTopStart="@dimen/card_radius"
                app:boxCornerRadiusTopEnd="@dimen/card_radius"
                app:boxCornerRadiusBottomStart="@dimen/card_radius"
                app:boxCornerRadiusBottomEnd="@dimen/card_radius"
                app:startIconDrawable="@drawable/ic_search"
                app:startIconTint="@color/text_tertiary"
                app:hintTextColor="@color/text_tertiary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tìm kiếm bạn bè..."
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium"
                    android:fontFamily="@font/inter_regular" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Invite Options -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_16">

                <!-- Invite by Phone -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardInvitePhone"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_8"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="@dimen/elevation_small"
                    app:rippleColor="@color/primary_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/spacing_12">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_phone"
                            app:tint="@color/primary"
                            android:layout_marginBottom="@dimen/spacing_4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Số điện thoại"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_small"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Invite by Link -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardInviteLink"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_8"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/card_radius"
                    app:cardElevation="@dimen/elevation_small"
                    app:rippleColor="@color/primary_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/spacing_12">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_link"
                            app:tint="@color/primary"
                            android:layout_marginBottom="@dimen/spacing_4" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chia sẻ link"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_small"
                            android:fontFamily="@font/inter_medium"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Friends List -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách bạn bè"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold"
                android:layout_marginBottom="@dimen/spacing_12" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerFriends"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_friend_invite" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>