<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_background"
    tools:context=".ui.child.detailTask.DetailTaskFragment">

    <!-- Header chung -->
    <com.kidsapp.ui.child.components.HeaderUserView
        android:id="@+id/headerUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    <!-- Nội dung cuộn -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_20">
            <!-- Nút Back -->
            <LinearLayout
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_button_google"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back"
                    app:tint="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="Quay lại"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <!-- Tiêu đề màn hình -->
            <TextView
                android:id="@+id/txtScreenTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_20"
                android:layout_marginTop="@dimen/spacing_16"
                android:text="Chi tiết bài tập"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold" />

            <!-- Card thông tin bài tập -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTaskInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:layout_marginHorizontal="@dimen/spacing_20"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="@dimen/elevation_medium"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_20"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <!-- Tên bài & mô tả ngắn -->
                    <TextView
                        android:id="@+id/txtTaskTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bài 1: Luyện phép cộng"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        tools:text="Bài 1: Luyện phép cộng" />

                    <TextView
                        android:id="@+id/txtTaskDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_8"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_medium"
                        tools:text="Trong bài này, bé sẽ luyện 10 phép cộng cơ bản để cộng số nhanh." />

                    <!-- Hàng icon thông tin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_16"
                        android:orientation="vertical">

                        <!-- Số câu hỏi -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_medium"
                                android:layout_height="@dimen/icon_size_medium"
                                android:src="@drawable/ic_list"
                                app:tint="@color/primary" />

                            <TextView
                                android:id="@+id/txtQuestionCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_8"
                                android:text="10 câu hỏi"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_medium" />
                        </LinearLayout>

                        <!-- Thời gian -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_8"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_medium"
                                android:layout_height="@dimen/icon_size_medium"
                                android:src="@drawable/ic_clock"
                                app:tint="@color/primary" />

                            <TextView
                                android:id="@+id/txtDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_8"
                                android:text="Thời gian dự kiến: 15 phút"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_medium" />
                        </LinearLayout>

                        <!-- Độ khó -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_8"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_medium"
                                android:layout_height="@dimen/icon_size_medium"
                                android:src="@drawable/ic_star"
                                app:tint="@color/status_info" />

                            <TextView
                                android:id="@+id/txtDifficulty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_8"
                                android:text="Độ khó: Dễ"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_medium" />
                        </LinearLayout>

                        <!-- Đánh giá -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_8"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_medium"
                                android:layout_height="@dimen/icon_size_medium"
                                android:src="@drawable/ic_star"
                                app:tint="@color/status_warning" />

                            <TextView
                                android:id="@+id/txtRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/spacing_8"
                                android:text="4.8"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_medium" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Phần thưởng -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:layout_marginHorizontal="@dimen/spacing_20"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="@dimen/elevation_small"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_16"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="@dimen/icon_size_large"
                            android:layout_height="@dimen/icon_size_large"
                            android:src="@drawable/ic_star"
                            app:tint="@color/status_warning" />

                        <TextView
                            android:id="@+id/txtRewardCoin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_4"
                            android:text="+20 Coin"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="@dimen/icon_size_large"
                            android:layout_height="@dimen/icon_size_large"
                            android:src="@drawable/ic_task"
                            app:tint="@color/primary" />

                        <TextView
                            android:id="@+id/txtRewardXp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_4"
                            android:text="+30 XP"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tiến độ -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:layout_marginHorizontal="@dimen/spacing_20"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="@dimen/elevation_small"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_16">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiến độ của bé"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtProgressLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_8"
                        android:text="Hoàn thành: 4/10"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_medium" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressChild"
                        style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="@dimen/spacing_12"
                        android:progress="40"
                        app:indicatorColor="@color/primary"
                        app:trackColor="@color/text_hint"
                        app:trackCornerRadius="16dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Danh sách nội dung bài -->
            <TextView
                android:id="@+id/txtSectionSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_20"
                android:layout_marginTop="@dimen/spacing_20"
                android:text="Nội dung bài tập"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_12"
                android:layout_marginHorizontal="@dimen/spacing_20"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false"
                tools:listitem="@layout/item_detail_step" />

            <!-- Nút Bắt đầu làm bài -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/spacing_24"
                android:layout_marginHorizontal="@dimen/spacing_20"
                android:layout_marginBottom="@dimen/spacing_20">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnStartTask"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bắt đầu làm bài"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_large"
                    android:paddingTop="@dimen/spacing_16"
                    android:paddingBottom="@dimen/spacing_16"
                    android:background="@drawable/bg_button_primary"
                    app:cornerRadius="@dimen/radius_input" />

                <TextView
                    android:id="@+id/txtNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:textColor="@color/text_tertiary"
                    android:textSize="@dimen/text_size_small"
                    android:text="Bạn có thể làm lại sau khi hoàn tất tất cả nội dung số!"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>