<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Chat bubble hiện phía trên avatar -->
    <TextView
        android:id="@+id/txtChatBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bg_chat_bubble_player"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        android:text=""
        android:textColor="@color/text_primary"
        android:textSize="11sp"
        android:maxWidth="120dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_player_card"
        android:padding="8dp">

        <!-- Avatar với online indicator -->
        <FrameLayout
            android:layout_width="44dp"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/imgPlayerAvatar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_child_avatar"
                android:background="@drawable/bg_avatar_circle" />

            <!-- Online indicator -->
            <View
                android:id="@+id/viewOnline"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/bg_online_indicator" />
        </FrameLayout>

        <!-- Tên người chơi -->
        <TextView
            android:id="@+id/txtPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Người chơi"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Điểm số -->
        <TextView
            android:id="@+id/txtPlayerScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 điểm"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Progress bar số câu đúng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressCorrect"
                android:layout_width="0dp"
                android:layout_height="6dp"
                android:layout_weight="1"
                android:progress="0"
                android:max="10"
                app:indicatorColor="#4CAF50"
                app:trackColor="#FFFFFF40"
                app:trackCornerRadius="3dp" />

            <TextView
                android:id="@+id/txtCorrectCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="0/10"
                android:textColor="@android:color/white"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
