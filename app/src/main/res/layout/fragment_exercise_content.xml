<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_app_background">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_app_gradient"
        android:padding="@dimen/spacing_20">

        <!-- Nút Back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_round_20"
            android:src="@drawable/ic_back"
            android:padding="@dimen/spacing_8"
            app:tint="@color/primary"
            android:contentDescription="Quay lại"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Tiêu đề -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/spacing_16"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài 1: Luyện phép cộng"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold"
                tools:text="Bài 1: Luyện phép cộng" />

            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:text="Chọn nội dung bạn muốn luyện tập"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/inter_regular"
                android:alpha="0.9"
                tools:text="Chọn nội dung bạn muốn luyện tập" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- RecyclerView danh sách nội dung -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingTop="@dimen/spacing_16"
        android:paddingBottom="@dimen/spacing_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card Làm bài test tổng -->
            <include
                android:id="@+id/cardComprehensiveTest"
                layout="@layout/card_comprehensive_test" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="16dp"
                android:background="@color/divider" />

            <!-- Danh sách nội dung -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerContents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/spacing_16"
                android:paddingEnd="@dimen/spacing_16"
                android:clipToPadding="false"
                tools:listitem="@layout/item_exercise_content" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
