<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_16"
    android:layout_marginHorizontal="0dp"
    app:cardCornerRadius="@dimen/radius_card"
    app:cardElevation="@dimen/elevation_small"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/spacing_16">

        <!-- Icon minh họa nhiệm vụ -->
        <ImageView
            android:id="@+id/imgTaskIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_task_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_foreground" />

        <!-- Tiêu đề nhiệm vụ -->
        <TextView
            android:id="@+id/txtTaskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_12"
            android:layout_marginEnd="@dimen/spacing_12"
            android:textColor="@color/history_text_primary"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/layoutRating"
            app:layout_constraintStart_toEndOf="@id/imgTaskIcon"
            app:layout_constraintTop_toTopOf="@id/imgTaskIcon"
            tools:text="Bài 1: Luyện phép cộng" />

        <!-- Thời gian hoàn thành -->
        <TextView
            android:id="@+id/txtCompletionTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_12"
            android:layout_marginTop="@dimen/spacing_8"
            android:textColor="@color/history_text_secondary"
            android:textSize="@dimen/text_size_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgTaskIcon"
            app:layout_constraintTop_toBottomOf="@id/txtTaskTitle"
            tools:text="Hoàn thành: 12/11/2025 - 15:30" />

        <!-- Rating (nếu có) -->
        <LinearLayout
            android:id="@+id/layoutRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgTaskIcon">

            <ImageView
                android:layout_width="@dimen/icon_size_medium"
                android:layout_height="@dimen/icon_size_medium"
                android:src="@drawable/ic_star"
                app:tint="@color/status_warning" />

            <TextView
                android:id="@+id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                tools:text="5.0" />
        </LinearLayout>

        <!-- Hàng XP và Coin -->
        <LinearLayout
            android:id="@+id/layoutRewards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_12"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/imgTaskIcon"
            app:layout_constraintTop_toBottomOf="@id/txtCompletionTime">

            <!-- Badge Coin -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_20"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/spacing_8"
                android:paddingTop="@dimen/spacing_4"
                android:paddingEnd="@dimen/spacing_8"
                android:paddingBottom="@dimen/spacing_4"
                android:backgroundTint="@color/surface_variant">

                <TextView
                    android:id="@+id/txtCoins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold"
                    tools:text="50" />

                <ImageView
                    android:layout_width="@dimen/icon_size_small"
                    android:layout_height="@dimen/icon_size_small"
                    android:layout_marginStart="@dimen/spacing_4"
                    android:src="@drawable/ic_star"
                    app:tint="@color/coin_gold" />
            </LinearLayout>

            <!-- Badge XP -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_8"
                android:background="@drawable/bg_round_20"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/spacing_8"
                android:paddingTop="@dimen/spacing_4"
                android:paddingEnd="@dimen/spacing_8"
                android:paddingBottom="@dimen/spacing_4"
                android:backgroundTint="@color/history_xp_blue">

                <TextView
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtXp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 XP"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small"
                    android:textStyle="bold"
                    tools:text="100 XP" />
            </LinearLayout>
        </LinearLayout>

        <!-- Nút Xem chi tiết -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnViewDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_12"
            android:minHeight="0dp"
            android:paddingStart="@dimen/spacing_12"
            android:paddingTop="@dimen/spacing_6"
            android:paddingEnd="@dimen/spacing_12"
            android:paddingBottom="@dimen/spacing_6"
            android:text="@string/view_details"
            android:textColor="@color/history_primary"
            android:textSize="@dimen/text_size_small"
            app:icon="@drawable/ic_eye"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/spacing_4"
            app:iconTint="@color/history_primary"
            app:iconSize="@dimen/icon_size_small"
            app:strokeColor="@color/history_primary"
            app:strokeWidth="1dp"
            app:cornerRadius="@dimen/radius_input"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:layout_constraintStart_toEndOf="@id/imgTaskIcon"
            app:layout_constraintTop_toBottomOf="@id/layoutRewards" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
