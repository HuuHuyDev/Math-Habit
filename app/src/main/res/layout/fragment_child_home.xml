<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_background"
    android:padding="@dimen/spacing_12"
    tools:context=".ui.child.home.ChildHomeFragment">

    <com.kidsapp.ui.child.components.HeaderUserView
        android:id="@+id/headerUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_level_badge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_16"
        android:clipToPadding="false"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerUser">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_32">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_20"
                android:layout_marginTop="@dimen/spacing_20"
                android:layout_marginBottom="@dimen/spacing_16"
                app:cardCornerRadius="@dimen/radius_card"
                app:cardElevation="@dimen/elevation_medium"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/layoutLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="@dimen/spacing_20">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/txtTrainingTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thành tích rèn luyện"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_title"
                        android:textStyle="bold" />

                    <!-- LEVEL SECTION -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_16"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Badge Level -->

                        <!-- Info -->

                        <FrameLayout
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@drawable/bg_level_badge"
                            android:padding="@dimen/spacing_8">

                            <TextView
                                android:id="@+id/txtLevel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="15"
                                android:textColor="@android:color/white"
                                android:textSize="26sp"
                                android:textStyle="bold" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_16"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LEVEL HIỆN TẠI"
                                android:textAllCaps="true"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtLevelLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_4"
                                android:text="Level 15"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_headline"
                                android:textStyle="bold" />

                            <!-- EXP LABEL -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_16"
                                android:text="ĐIỂM KINH NGHIỆM"
                                android:textAllCaps="true"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_small"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtExp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_4"
                                android:text="100 / 150 exp"
                                android:textColor="@color/primary"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold" />

                            <!-- PROGRESS BAR -->
                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progressExp"
                                style="@style/Widget.MaterialComponents.LinearProgressIndicator"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:layout_marginTop="@dimen/spacing_12"
                                android:progress="65"
                                app:indicatorColor="@color/primary"
                                app:trackColor="@color/text_hint"
                                app:trackCornerRadius="16dp" />

                            <!-- EXP Hint Box -->
                            <LinearLayout
                                android:id="@+id/layoutExpHint"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_12"
                                android:padding="@dimen/spacing_12"
                                android:orientation="horizontal"
                                android:background="@drawable/bg_exp_hint"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_fire"
                                    app:tint="@color/status_warning" />

                                <TextView
                                    android:id="@+id/txtExpHint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/spacing_8"
                                    android:text="Chỉ còn 50 exp nữa để lên cấp!"
                                    android:textColor="@color/status_warning"
                                    android:textSize="@dimen/text_size_medium"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <include
                android:id="@+id/actionsContainer"
                layout="@layout/view_child_action_list" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
