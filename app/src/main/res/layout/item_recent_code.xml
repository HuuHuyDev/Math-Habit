<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_8"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/surface_variant"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="0dp"
    app:strokeColor="@color/border"
    app:strokeWidth="1dp"
    app:rippleColor="@color/primary_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_12">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_history"
            android:contentDescription="Lịch sử"
            app:tint="@color/text_tertiary"
            android:layout_marginEnd="@dimen/spacing_12" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC123XYZ"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold"
                android:letterSpacing="0.1"
                tools:text="ABC123XYZ" />

            <TextView
                android:id="@+id/txtCodeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_2"
                android:text="Từ Nguyễn Văn A • 2 giờ trước"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/inter_regular"
                tools:text="Từ Nguyễn Văn A • 2 giờ trước" />

        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/icon_size_small"
            android:layout_height="@dimen/icon_size_small"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/text_tertiary" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>