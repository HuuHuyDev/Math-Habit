<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.child.main.ChildMainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/childHomeHost"
        android:name="com.kidsapp.ui.child.home.ChildHomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/fragment_child_home" />

    <!-- FAB Chat với Phụ huynh -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:contentDescription="Chat với phụ huynh"
        android:src="@drawable/ic_chat"
        app:backgroundTint="@color/primary"
        app:elevation="6dp"
        app:fabSize="normal"
        app:tint="@android:color/white" />

    <!-- Badge tin nhắn mới -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/badgeChat"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="68dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/error"
        app:cardCornerRadius="11dp"
        app:cardElevation="8dp"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/txtBadgeCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
