<?xml version="1.0" encoding="utf-8"?>
<!-- Header chung cho các trang Child - có thể tái sử dụng -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_header_gradient"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="20dp"
    android:paddingTop="40dp"
    android:paddingBottom="24dp">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_avatar_white"
        android:padding="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_child_face" />

    <!-- Hello + Name -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xin chào !"
            android:textColor="@color/white_80"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minh An"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Notification -->
    <FrameLayout
        android:id="@+id/btnNotification"
        android:layout_width="44dp"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/bg_notification_white"
            android:padding="10dp"
            android:src="@drawable/ic_notification"
            app:tint="@color/text_primary" />

        <TextView
            android:id="@+id/txtNotificationBadge"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="top|end"
            android:background="@drawable/bg_badge_red"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>
