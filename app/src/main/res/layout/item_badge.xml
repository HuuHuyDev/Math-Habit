<?xml version="1.0" encoding="utf-8"?>
<!-- Item layout cho huy hiệu -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="2dp"
    app:strokeColor="#C7E0FF"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:id="@+id/item_badge_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="@dimen/spacing_20"
        android:paddingHorizontal="@dimen/spacing_12"
        android:background="@android:color/transparent"
        android:minHeight="140dp">

        <!-- Icon huy hiệu với background tròn -->
        <FrameLayout
            android:id="@+id/iconContainer"
            android:layout_width="72dp"
            android:layout_height="72dp">

            <View
                android:id="@+id/iconBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_badge_unlocked" />

            <ImageView
                android:id="@+id/imgBadgeIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_trophy"
                android:contentDescription="@string/badge"
                android:tint="@android:color/white"
                tools:src="@drawable/ic_trophy" />

        </FrameLayout>

        <!-- Tên huy hiệu -->
        <TextView
            android:id="@+id/txtBadgeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_12"
            android:text="Siêu sao"
            android:textColor="#2D3748"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Siêu sao" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
