<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_12"
    android:layout_marginHorizontal="0dp"
    app:cardCornerRadius="@dimen/radius_card"
    app:cardElevation="@dimen/elevation_small"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/spacing_16"
        android:gravity="center_vertical">

        <!-- Ảnh minh họa bên trái (hình vuông xám) -->
        <ImageView
            android:id="@+id/imgTask"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_task_image"
            android:src="@drawable/ic_launcher_foreground"
            tools:src="@drawable/ic_launcher_foreground" />

        <!-- Nội dung ở giữa -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold"
                tools:text="Công việc 1: Nấu ăn" />

            <TextView
                android:id="@+id/txtSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small"
                tools:text="Buổi sáng, sau khi ăn sáng" />
        </LinearLayout>

        <!-- Vòng tròn tick bên phải -->
        <ImageView
            android:id="@+id/imgCheckbox"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="@dimen/spacing_12"
            android:background="@drawable/bg_checkbox_unchecked" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
