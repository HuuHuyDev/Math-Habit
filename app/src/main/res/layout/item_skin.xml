<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSkin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/background"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/border"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Avatar Image -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/imgSkin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_child_avatar" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Skin Name -->
        <TextView
            android:id="@+id/txtSkinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:maxWidth="90dp"
            android:text="Ká»³ nhung"
            android:textColor="@color/text_primary"
            android:textSize="12sp" />

        <!-- Price -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_coin" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/inter_bold"
                android:text="500"
                android:textColor="@color/coin_orange"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Status Badge (Owned/Equipped) -->
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_status_badge"
            android:fontFamily="@font/inter_medium"
            android:paddingHorizontal="10dp"
            android:paddingVertical="3dp"
            android:text="Mua"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
