<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Close button -->
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="@drawable/bg_round_20"
            android:src="@drawable/ic_close"
            app:tint="@color/text_primary" />

        <!-- Winner/Loser Icon -->
        <ImageView
            android:id="@+id/imgResult"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_trophy" />

        <!-- Result Title -->
        <TextView
            android:id="@+id/txtResultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chiến thắng!"
            android:textColor="@color/primary"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold" />

        <!-- Result Message -->
        <TextView
            android:id="@+id/txtResultMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Bạn đã chiến thắng đối thủ!"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center" />

        <!-- Score Comparison Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kết quả"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/inter_bold" />

                <!-- Player 1 Score -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgPlayer1Avatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_child_avatar" />

                    <TextView
                        android:id="@+id/txtPlayer1Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Bạn"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_semibold" />

                    <TextView
                        android:id="@+id/txtPlayer1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="850"
                        android:textColor="@color/primary"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="điểm"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_regular" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="@color/divider" />

                <!-- Player 2 Score -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/imgPlayer2Avatar"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_child_avatar" />

                    <TextView
                        android:id="@+id/txtPlayer2Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:text="Đối thủ"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:fontFamily="@font/inter_semibold" />

                    <TextView
                        android:id="@+id/txtPlayer2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="720"
                        android:textColor="@color/text_secondary"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="điểm"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_regular" />
                </LinearLayout>

                <!-- Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <!-- Correct Answers -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtCorrectCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8"
                            android:textColor="@color/success"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/inter_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đúng"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_regular" />
                    </LinearLayout>

                    <!-- Wrong Answers -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtWrongCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/error"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/inter_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sai"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_regular" />
                    </LinearLayout>

                    <!-- Total Time -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtTotalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4:32"
                            android:textColor="@color/primary"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/inter_bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thời gian"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="@font/inter_regular" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Rewards Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_gradient_orange"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_coin" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phần thưởng"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/inter_regular" />

                    <TextView
                        android:id="@+id/txtRewardCoins"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+50 xu"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_bold" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlayAgain"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Chơi lại"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/primary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGoHome"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="Về trang chủ"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/white"
                android:textColor="@color/primary"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
