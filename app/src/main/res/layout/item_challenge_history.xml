<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: Result Badge + Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtResultBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_round_20"
                android:backgroundTint="@color/success"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:text="Thắng"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24/12/2025"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular" />
        </LinearLayout>

        <!-- Players Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Player 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgPlayer1Avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_child_avatar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPlayer1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bạn"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_bold" />

                    <TextView
                        android:id="@+id/txtPlayer1Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="850 điểm"
                        android:textColor="@color/primary"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_semibold" />
                </LinearLayout>
            </LinearLayout>

            <!-- VS -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:text="VS"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold" />

            <!-- Player 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/imgPlayer2Avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_child_avatar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtPlayer2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đối thủ"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_bold" />

                    <TextView
                        android:id="@+id/txtPlayer2Score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="720 điểm"
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_semibold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8/10 đúng • 4:32"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular" />
        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
