<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Avatar -->
        <FrameLayout
            android:layout_width="52dp"
            android:layout_height="52dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_child_avatar" />

            <!-- Online indicator -->
            <View
                android:id="@+id/viewOnline"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/bg_online_indicator"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:text="Tên bạn bè"
                android:textColor="@color/text_primary"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_star_level"
                    app:tint="@color/status_warning" />

                <TextView
                    android:id="@+id/txtLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:fontFamily="@font/inter_regular"
                    android:text="Level 5"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_dot" />

                <TextView
                    android:id="@+id/txtXP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="1,250 XP"
                    android:textColor="@color/text_secondary"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Invite Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInvite"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/inter_semibold"
            android:text="Mời"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:backgroundTint="@color/primary"
            app:cornerRadius="10dp" />

        <!-- Invited State (hidden by default) -->
        <TextView
            android:id="@+id/txtInvited"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:text="Đã mời ✓"
            android:textColor="@color/success"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
