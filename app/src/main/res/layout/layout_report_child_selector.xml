<?xml version="1.0" encoding="utf-8"?>
<!-- Child Selector Box - Click to open bottom sheet -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/childSelectorContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_20"
    android:layout_marginTop="@dimen/spacing_16"
    android:layout_marginEnd="@dimen/spacing_20"
    android:background="@drawable/bg_child_selector"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="@dimen/spacing_16"
    android:paddingTop="@dimen/spacing_12"
    android:paddingEnd="@dimen/spacing_16"
    android:paddingBottom="@dimen/spacing_12">

    <!-- Avatar emoji -->
    <TextView
        android:id="@+id/imgChildAvatar"
        android:layout_width="@dimen/spacing_40"
        android:layout_height="@dimen/spacing_40"
        android:background="@drawable/bg_avatar_circle"
        android:gravity="center"
        android:text="ðŸ‘¦"
        android:textSize="@dimen/spacing_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Child name and level -->
    <TextView
        android:id="@+id/txtSelectedChild"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_12"
        android:layout_marginEnd="@dimen/spacing_8"
        android:text="Há»“ Há»¯u Huy â€“ Lá»›p 3"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imgDropdownArrow"
        app:layout_constraintStart_toEndOf="@+id/imgChildAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Dropdown arrow icon -->
    <ImageView
        android:id="@+id/imgDropdownArrow"
        android:layout_width="@dimen/spacing_20"
        android:layout_height="@dimen/spacing_20"
        android:src="@drawable/ic_arrow_down"
        android:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>