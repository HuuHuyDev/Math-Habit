<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_card"
    android:padding="@dimen/spacing_24">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_20">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_battle"
            app:tint="@color/primary"
            android:layout_marginEnd="@dimen/spacing_12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chọn chế độ thách đấu"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_circle_light"
            android:src="@drawable/ic_close"
            android:contentDescription="Đóng"
            app:tint="@color/text_tertiary" />

    </LinearLayout>

    <!-- Challenge Modes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Quick Challenge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardQuickChallenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_12"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/elevation_small"
            app:rippleColor="@color/primary_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_16">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_flash"
                    app:tint="@color/status_warning"
                    android:layout_marginEnd="@dimen/spacing_12" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thách đấu nhanh"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_4"
                        android:text="10 câu hỏi • 5 phút"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/inter_regular" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/text_tertiary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Standard Challenge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStandardChallenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_12"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/elevation_small"
            app:rippleColor="@color/primary_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_16">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_target"
                    app:tint="@color/primary"
                    android:layout_marginEnd="@dimen/spacing_12" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thách đấu tiêu chuẩn"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_4"
                        android:text="20 câu hỏi • 10 phút"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/inter_regular" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/text_tertiary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Marathon Challenge -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMarathonChallenge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_20"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="@color/surface"
            app:cardCornerRadius="@dimen/card_radius"
            app:cardElevation="@dimen/elevation_small"
            app:rippleColor="@color/primary_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/spacing_16">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_marathon"
                    app:tint="@color/status_error"
                    android:layout_marginEnd="@dimen/spacing_12" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thách đấu marathon"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_4"
                        android:text="50 câu hỏi • 20 phút"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/inter_regular" />

                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/icon_size_medium"
                    android:layout_height="@dimen/icon_size_medium"
                    android:src="@drawable/ic_arrow_right"
                    app:tint="@color/text_tertiary" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_8"
            android:text="Hủy"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_medium"
            android:fontFamily="@font/inter_medium"
            android:backgroundTint="@color/surface_variant"
            app:cornerRadius="@dimen/radius_button"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendChallenge"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_8"
            android:text="Gửi thách đấu"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/primary"
            app:cornerRadius="@dimen/radius_button"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</LinearLayout>