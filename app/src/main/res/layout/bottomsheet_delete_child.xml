<?xml version="1.0" encoding="utf-8"?>
<!-- BottomSheet Xác nhận xóa Bé -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_card"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_24">

    <!-- Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="@drawable/bg_bottomsheet_handle" />

    <!-- Warning Icon -->
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/spacing_20"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_warning"
        app:tint="#FF4E4E" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_20"
        android:fontFamily="@font/inter_bold"
        android:text="Xóa Bé?"
        android:textColor="@color/text_primary"
        android:textSize="22sp" />

    <!-- Message -->
    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_12"
        android:fontFamily="@font/inter_regular"
        android:gravity="center"
        android:text="Bạn có chắc muốn xóa hồ sơ của [Tên Bé]?\nHành động này không thể hoàn tác."
        android:textColor="@color/text_secondary"
        android:textSize="14sp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_24"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_white_round"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_semibold"
                android:text="Hủy"
                android:textColor="@color/text_secondary"
                android:textSize="15sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnDelete"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/spacing_12"
            android:layout_weight="1"
            android:background="@drawable/bg_delete_button"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_bold"
                android:text="Xóa"
                android:textColor="#FF4E4E"
                android:textSize="15sp" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
