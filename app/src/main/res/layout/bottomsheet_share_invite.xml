<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_white_card"
    android:padding="@dimen/spacing_24">

    <!-- Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/spacing_20"
        android:background="@drawable/bg_bottomsheet_handle" />

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_20">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_share"
            app:tint="@color/primary"
            android:layout_marginEnd="@dimen/spacing_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chia sẻ link mời"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_title"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold" />

    </LinearLayout>

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gửi link này cho bạn bè để mời họ tham gia thách đấu cùng bạn!"
        android:textColor="@color/text_secondary"
        android:textSize="@dimen/text_size_medium"
        android:fontFamily="@font/inter_regular"
        android:layout_marginBottom="@dimen/spacing_20" />

    <!-- Invite Link Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_20"
        app:cardBackgroundColor="@color/surface_variant"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="0dp"
        app:strokeColor="@color/border"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/spacing_16">

            <TextView
                android:id="@+id/txtInviteLink"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="https://mathhabit.app/invite/abc123"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_medium"
                android:fontFamily="@font/inter_regular"
                android:ellipsize="middle"
                android:singleLine="true"
                tools:text="https://mathhabit.app/invite/abc123" />

            <ImageButton
                android:id="@+id/btnCopyLink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/spacing_8"
                android:background="@drawable/bg_circle_primary"
                android:src="@drawable/ic_copy"
                android:contentDescription="Sao chép link"
                app:tint="@color/white" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Share Options -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chia sẻ qua"
        android:textColor="@color/text_primary"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        android:fontFamily="@font/inter_bold"
        android:layout_marginBottom="@dimen/spacing_16" />

    <!-- Share Apps Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/spacing_20">

        <!-- WhatsApp -->
        <LinearLayout
            android:id="@+id/layoutShareWhatsApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_12"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_whatsapp"
                android:layout_marginBottom="@dimen/spacing_8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/inter_medium"
                android:gravity="center" />

        </LinearLayout>

        <!-- Messenger -->
        <LinearLayout
            android:id="@+id/layoutShareMessenger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_12"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_messenger"
                android:layout_marginBottom="@dimen/spacing_8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messenger"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/inter_medium"
                android:gravity="center" />

        </LinearLayout>

        <!-- Zalo -->
        <LinearLayout
            android:id="@+id/layoutShareZalo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_12"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_zalo"
                android:layout_marginBottom="@dimen/spacing_8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zalo"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/inter_medium"
                android:gravity="center" />

        </LinearLayout>

        <!-- More -->
        <LinearLayout
            android:id="@+id/layoutShareMore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_12"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_more_apps"
                app:tint="@color/text_tertiary"
                android:layout_marginBottom="@dimen/spacing_8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khác"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/inter_medium"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_8"
            android:text="Đóng"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_medium"
            android:fontFamily="@font/inter_medium"
            android:backgroundTint="@color/surface_variant"
            app:cornerRadius="@dimen/radius_button"
            style="@style/Widget.MaterialComponents.Button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGenerateNewLink"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_8"
            android:text="Tạo link mới"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/primary"
            app:cornerRadius="@dimen/radius_button"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</LinearLayout>