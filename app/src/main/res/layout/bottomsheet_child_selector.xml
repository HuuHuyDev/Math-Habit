<?xml version="1.0" encoding="utf-8"?>
<!-- Bottom Sheet chọn bé -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottomsheet"
    android:paddingTop="@dimen/spacing_8"
    android:paddingBottom="@dimen/spacing_20">

    <!-- Drag handle -->
    <View
        android:layout_width="@dimen/spacing_40"
        android:layout_height="@dimen/spacing_4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_8"
        android:layout_marginBottom="@dimen/spacing_16"
        android:background="@drawable/bg_drag_handle" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_20"
        android:layout_marginBottom="@dimen/spacing_12"
        android:text="Chọn bé"
        android:textColor="#1F2937"
        android:textSize="@dimen/text_size_xxlarge"
        android:textStyle="bold" />

    <!-- RecyclerView danh sách bé -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChildList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>
