<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/spacing_12"
    android:paddingBottom="@dimen/spacing_12">

    <FrameLayout
        android:id="@+id/flChildAvatar"
        android:layout_width="@dimen/activity_icon_size"
        android:layout_height="@dimen/activity_icon_size"
        android:background="@drawable/bg_avatar_circle">

        <ImageView
            android:id="@+id/imgChildAvatar"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_gravity="center"
            android:src="@drawable/ic_user_default" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_12"
        android:layout_weight="1"
        android:orientation="vertical">

            <TextView
                android:id="@+id/tvActivityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Huy đã hoàn thành bài tập Cộng level 2"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvActivityXp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+15 XP"
                android:textColor="@color/xp_green"
                android:textSize="@dimen/text_size_xsmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_6"
                android:text="•"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_size_xsmall" />

            <TextView
                android:id="@+id/tvActivityTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_6"
                android:text="10 phút trước"
                android:textColor="@color/text_tertiary"
                android:textSize="@dimen/text_size_xsmall" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/flActivityIcon"
        android:layout_width="@dimen/activity_icon_container"
        android:layout_height="@dimen/activity_icon_container"
        android:background="@drawable/bg_activity_icon">

        <ImageView
            android:id="@+id/imgActivityIcon"
            android:layout_width="@dimen/icon_size_medium"
            android:layout_height="@dimen/icon_size_medium"
            android:layout_gravity="center"
            android:src="@drawable/ic_task"
            android:tint="@color/white" />
    </FrameLayout>

</LinearLayout>

