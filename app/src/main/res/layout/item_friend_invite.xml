<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_8"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/elevation_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_16">

        <!-- Avatar -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="Avatar"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_child_avatar"
            app:shapeAppearanceOverlay="@style/CircleImageView" />

        <!-- Friend Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_12"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtFriendName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold"
                tools:text="Nguyễn Văn A" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/spacing_4">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_trophy"
                    app:tint="@color/coin_gold"
                    android:layout_marginEnd="@dimen/spacing_4" />

                <TextView
                    android:id="@+id/txtLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 5"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_small"
                    android:fontFamily="@font/inter_regular"
                    tools:text="Level 5" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="@dimen/spacing_8"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/text_tertiary" />

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đang online"
                    android:textColor="@color/status_success"
                    android:textSize="@dimen/text_size_small"
                    android:fontFamily="@font/inter_regular"
                    tools:text="Đang online" />

            </LinearLayout>

        </LinearLayout>

        <!-- Invite Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInvite"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Mời"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            android:backgroundTint="@color/primary"
            app:cornerRadius="18dp"
            android:paddingHorizontal="@dimen/spacing_16"
            style="@style/Widget.MaterialComponents.Button" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>